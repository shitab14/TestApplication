<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".implementinginterface.ImplementingInterfaceActivity">

    <include
        android:id="@+id/actionbar"
        layout="@layout/top_actionbar"/>

    <ImageView
        android:id="@+id/ivCar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_directions_car_24"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/actionbar"
        android:layout_margin="40dp"/>

    <TextView
        android:id="@+id/tvWheels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Car has "
        android:textSize="20sp"
        android:layout_below="@id/ivCar"
        android:textAlignment="center"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tvPassengers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Car has "
        android:textSize="20sp"
        android:layout_below="@id/tvWheels"
        android:textAlignment="center"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tvGas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Car has "
        android:textSize="20sp"
        android:layout_below="@id/tvPassengers"
        android:textAlignment="center"
        android:gravity="center"/>


</RelativeLayout>